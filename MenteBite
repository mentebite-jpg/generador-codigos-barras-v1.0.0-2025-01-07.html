    <script>
        // ====================================================================
        // CONFIGURACI√ìN GLOBAL
        // ====================================================================
        
        let currentBarcode = null;
        let currentScale = 1;
        let currentDPI = 300;
        let currentFormat = 'ITF14';
        let currentRotation = 0;
        let currentBarColor = '#000000';
        let currentBgColor = '#ffffff';
        
        // Configuraciones por formato
        const formatConfig = {
            'ITF14': {
                name: 'EAN-14',
                placeholder: '1742336640012',
                example: 'Ingrese 13 d√≠gitos para EAN-14 (sin d√≠gito validador)',
                minLength: 13,
                maxLength: 14,
                validation: validateEAN14Data,
                calculateCheckDigit: calculateEAN14CheckDigit,
                defaultHeight: 32,
                defaultWidth: 46
            },
            'EAN13': {
                name: 'EAN-13',
                placeholder: '590123412345',
                example: 'Ingrese 12 d√≠gitos para EAN-13 (sin d√≠gito validador)',
                minLength: 12,
                maxLength: 13,
                validation: validateEAN13Data,
                calculateCheckDigit: calculateEAN13CheckDigit,
                defaultHeight: 25,
                defaultWidth: 37
            },
            'UPC': {
                name: 'UPC-12',
                placeholder: '12345678901',
                example: 'Ingrese 11 d√≠gitos para UPC-12 (sin d√≠gito validador)',
                minLength: 11,
                maxLength: 12,
                validation: validateUPCData,
                calculateCheckDigit: calculateUPCheckDigit,
                defaultHeight: 25,
                defaultWidth: 37
            },
            'CODE128': {
                name: 'CODE-128',
                placeholder: 'ABC123456789',
                example: 'Ingrese texto alfanum√©rico para CODE-128',
                minLength: 1,
                maxLength: 100,
                validation: validateCODE128Data,
                calculateCheckDigit: null,
                defaultHeight: 20,
                defaultWidth: 40
            }
        };
        
        // ====================================================================
        // FUNCIONES DE VALIDACI√ìN Y C√ÅLCULO POR FORMATO
        // ====================================================================
        
        // Algoritmo para EAN-14
        function calculateEAN14CheckDigit(data) {
            if (!/^\d{13}$/.test(data)) {
                throw new Error("Se requieren exactamente 13 d√≠gitos para EAN-14");
            }
            
            let sum = 0;
            for (let i = 0; i < 13; i++) {
                let digit = parseInt(data.charAt(i));
                let position = i + 1;
                sum += (position % 2 === 1) ? digit * 3 : digit;
            }
            
            let remainder = sum % 10;
            return (10 - remainder) % 10;
        }
        
        // Algoritmo para EAN-13
        function calculateEAN13CheckDigit(data) {
            if (!/^\d{12}$/.test(data)) {
                throw new Error("Se requieren exactamente 12 d√≠gitos para EAN-13");
            }
            
            let sum = 0;
            for (let i = 0; i < 12; i++) {
                let digit = parseInt(data.charAt(i));
                sum += (i % 2 === 0) ? digit : digit * 3;
            }
            
            let remainder = sum % 10;
            return (10 - remainder) % 10;
        }
        
        // Algoritmo para UPC-12 (igual que EAN-13 pero con 11 d√≠gitos de entrada)
        function calculateUPCheckDigit(data) {
            if (!/^\d{11}$/.test(data)) {
                throw new Error("Se requieren exactamente 11 d√≠gitos para UPC-12");
            }
            
            let sum = 0;
            for (let i = 0; i < 11; i++) {
                let digit = parseInt(data.charAt(i));
                sum += (i % 2 === 0) ? digit * 3 : digit;
            }
            
            let remainder = sum % 10;
            return (10 - remainder) % 10;
        }
        
        // Validaci√≥n EAN-14
        function validateEAN14Data(data) {
            if (!/^\d{13,14}$/.test(data)) {
                return {
                    valid: false,
                    message: "EAN-14 requiere 13 d√≠gitos (sin validador) o 14 d√≠gitos (completo)"
                };
            }
            
            let data13, providedCheckDigit, calculatedCheckDigit;
            
            if (data.length === 13) {
                data13 = data;
                calculatedCheckDigit = calculateEAN14CheckDigit(data13);
                return {
                    valid: true,
                    dataBase: data13,
                    dataFull: data13 + calculatedCheckDigit,
                    providedCheckDigit: null,
                    calculatedCheckDigit: calculatedCheckDigit,
                    needsCheckDigit: true,
                    message: `D√≠gito validador calculado: ${calculatedCheckDigit}`
                };
            } else {
                data13 = data.substring(0, 13);
                providedCheckDigit = parseInt(data.charAt(13));
                calculatedCheckDigit = calculateEAN14CheckDigit(data13);
                
                if (providedCheckDigit === calculatedCheckDigit) {
                    return {
                        valid: true,
                        dataBase: data13,
                        dataFull: data,
                        providedCheckDigit: providedCheckDigit,
                        calculatedCheckDigit: calculatedCheckDigit,
                        needsCheckDigit: false,
                        message: `D√≠gito validador correcto: ${providedCheckDigit}`
                    };
                } else {
                    return {
                        valid: false,
                        dataBase: data13,
                        dataFull: data13 + calculatedCheckDigit,
                        providedCheckDigit: providedCheckDigit,
                        calculatedCheckDigit: calculatedCheckDigit,
                        needsCheckDigit: true,
                        message: `D√≠gito validador incorrecto. Deber√≠a ser: ${calculatedCheckDigit}`
                    };
                }
            }
        }
        
        // Validaci√≥n EAN-13
        function validateEAN13Data(data) {
            if (!/^\d{12,13}$/.test(data)) {
                return {
                    valid: false,
                    message: "EAN-13 requiere 12 d√≠gitos (sin validador) o 13 d√≠gitos (completo)"
                };
            }
            
            let data12, providedCheckDigit, calculatedCheckDigit;
            
            if (data.length === 12) {
                data12 = data;
                calculatedCheckDigit = calculateEAN13CheckDigit(data12);
                return {
                    valid: true,
                    dataBase: data12,
                    dataFull: data12 + calculatedCheckDigit,
                    providedCheckDigit: null,
                    calculatedCheckDigit: calculatedCheckDigit,
                    needsCheckDigit: true,
                    message: `D√≠gito validador calculado: ${calculatedCheckDigit}`
                };
            } else {
                data12 = data.substring(0, 12);
                providedCheckDigit = parseInt(data.charAt(12));
                calculatedCheckDigit = calculateEAN13CheckDigit(data12);
                
                if (providedCheckDigit === calculatedCheckDigit) {
                    return {
                        valid: true,
                        dataBase: data12,
                        dataFull: data,
                        providedCheckDigit: providedCheckDigit,
                        calculatedCheckDigit: calculatedCheckDigit,
                        needsCheckDigit: false,
                        message: `D√≠gito validador correcto: ${providedCheckDigit}`
                    };
                } else {
                    return {
                        valid: false,
                        dataBase: data12,
                        dataFull: data12 + calculatedCheckDigit,
                        providedCheckDigit: providedCheckDigit,
                        calculatedCheckDigit: calculatedCheckDigit,
                        needsCheckDigit: true,
                        message: `D√≠gito validador incorrecto. Deber√≠a ser: ${calculatedCheckDigit}`
                    };
                }
            }
        }
        
        // Validaci√≥n UPC-12
        function validateUPCData(data) {
            if (!/^\d{11,12}$/.test(data)) {
                return {
                    valid: false,
                    message: "UPC-12 requiere 11 d√≠gitos (sin validador) o 12 d√≠gitos (completo)"
                };
            }
            
            let data11, providedCheckDigit, calculatedCheckDigit;
            
            if (data.length === 11) {
                data11 = data;
                calculatedCheckDigit = calculateUPCheckDigit(data11);
                return {
                    valid: true,
                    dataBase: data11,
                    dataFull: data11 + calculatedCheckDigit,
                    providedCheckDigit: null,
                    calculatedCheckDigit: calculatedCheckDigit,
                    needsCheckDigit: true,
                    message: `D√≠gito validador calculado: ${calculatedCheckDigit}`
                };
            } else {
                data11 = data.substring(0, 11);
                providedCheckDigit = parseInt(data.charAt(11));
                calculatedCheckDigit = calculateUPCheckDigit(data11);
                
                if (providedCheckDigit === calculatedCheckDigit) {
                    return {
                        valid: true,
                        dataBase: data11,
                        dataFull: data,
                        providedCheckDigit: providedCheckDigit,
                        calculatedCheckDigit: calculatedCheckDigit,
                        needsCheckDigit: false,
                        message: `D√≠gito validador correcto: ${providedCheckDigit}`
                    };
                } else {
                    return {
                        valid: false,
                        dataBase: data11,
                        dataFull: data11 + calculatedCheckDigit,
                        providedCheckDigit: providedCheckDigit,
                        calculatedCheckDigit: calculatedCheckDigit,
                        needsCheckDigit: true,
                        message: `D√≠gito validador incorrecto. Deber√≠a ser: ${calculatedCheckDigit}`
                    };
                }
            }
        }
        
        // Validaci√≥n CODE-128 (sin d√≠gito validador)
        function validateCODE128Data(data) {
            if (data.length < 1) {
                return {
                    valid: false,
                    message: "CODE-128 requiere al menos 1 car√°cter"
                };
            }
            
            if (!/^[ -~]+$/.test(data)) {
                return {
                    valid: false,
                    message: "CODE-128 solo acepta caracteres ASCII imprimibles"
                };
            }
            
            return {
                valid: true,
                dataBase: data,
                dataFull: data,
                providedCheckDigit: null,
                calculatedCheckDigit: null,
                needsCheckDigit: false,
                message: "Texto v√°lido para CODE-128"
            };
        }
        
        // ====================================================================
        // FUNCIONES DE INTERFAZ - MEJORADAS
        // ====================================================================
        
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar con EAN-14
            selectFormat('ITF14');
            setTimeout(generateBarcode, 500);
            
            // Configurar eventos para mejor usabilidad
            const dataInput = document.getElementById('dataInput');
            dataInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    generateBarcode();
                }
            });
            
            // Inicializar colores
            updateColorOptionStates();
        });
        
        function selectFormat(format) {
            currentFormat = format;
            const config = formatConfig[format];
            
            // Actualizar botones activos
            document.querySelectorAll('.format-option').forEach(btn => {
                btn.classList.remove('active');
                if (btn.getAttribute('data-format') === format) {
                    btn.classList.add('active');
                }
            });
            
            // Actualizar campo de entrada
            const dataInput = document.getElementById('dataInput');
            dataInput.value = config.placeholder;
            dataInput.placeholder = config.placeholder;
            
            // Actualizar ejemplo
            document.getElementById('formatExample').textContent = config.example;
            
            // Limpiar vista previa
            document.getElementById('noBarcode').style.display = 'block';
            document.getElementById('barcode').innerHTML = '';
            document.getElementById('codeDisplay').style.display = 'none';
            document.getElementById('complianceInfo').style.display = 'none';
            document.getElementById('nonComplianceInfo').style.display = 'none';
            
            // Actualizar informaci√≥n
            document.getElementById('codeInfo').textContent = 
                `Seleccionado: ${config.name}. ${config.example}`;
            
            // Actualizar dimensiones por defecto
            document.getElementById('currentHeight').textContent = `${config.defaultHeight}.0 mm`;
            document.getElementById('currentWidth').textContent = `${config.defaultWidth}.0 mm`;
        }
        
        function selectScale(scale) {
            currentScale = scale;
            document.getElementById('scaleInput').value = scale;
            document.getElementById('currentScale').textContent = `${scale * 100}%`;
            
            // Actualizar botones activos
            document.querySelectorAll('.scale-btn').forEach(btn => {
                btn.classList.remove('active');
                if (parseFloat(btn.getAttribute('data-scale')) === scale) {
                    btn.classList.add('active');
                }
            });
            
            // Regenerar c√≥digo si ya existe
            if (currentBarcode) {
                generateBarcode();
            }
        }
        
        function selectRotation(rotation) {
            currentRotation = rotation;
            document.getElementById('rotationInput').value = rotation;
            
            // Actualizar botones activos
            document.querySelectorAll('.rotation-btn').forEach(btn => {
                btn.classList.remove('active');
                if (parseInt(btn.getAttribute('data-rotation')) === rotation) {
                    btn.classList.add('active');
                }
            });
        }
        
        function applyRotation() {
            if (!currentBarcode) {
                showAlert('‚ùå Genere un c√≥digo de barras primero', 'error');
                return;
            }
            
            const barcodeSVG = document.getElementById('barcode');
            if (!barcodeSVG || barcodeSVG.innerHTML === '') return;
            
            // Aplicar transformaci√≥n CSS para rotaci√≥n
            barcodeSVG.style.transform = `rotate(${currentRotation}deg)`;
            barcodeSVG.style.transformOrigin = 'center center';
            
            showAlert(`‚úÖ Rotaci√≥n aplicada: ${currentRotation}¬∞`, 'success');
        }
        
        function selectDPI(dpi) {
            currentDPI = dpi;
            document.getElementById('dpiInput').value = dpi;
            
            // Actualizar botones activos
            document.querySelectorAll('.dpi-btn').forEach(btn => {
                btn.classList.remove('active');
                btn.classList.remove('warning');
                if (parseInt(btn.getAttribute('data-dpi')) === dpi) {
                    btn.classList.add('active');
                    if (dpi === 600) {
                        btn.classList.add('warning');
                    }
                }
            });
            
            // Mostrar advertencia para 600 DPI
            const warning = document.getElementById('dpiWarning');
            if (dpi === 600) {
                warning.style.display = 'flex';
            } else {
                warning.style.display = 'none';
            }
        }
        
        // Funci√≥n mejorada para selecci√≥n de colores
        function selectColorPreset(name, color) {
            currentBarColor = color;
            document.getElementById('barColorPicker').value = color;
            
            // Actualizar estado de opciones activas
            updateColorOptionStates();
            
            if (currentBarcode) {
                generateBarcode();
            }
        }
        
        function selectBgColorPreset(name, color) {
            currentBgColor = color;
            document.getElementById('bgColorPicker').value = color;
            
            // Actualizar estado de opciones activas
            updateColorOptionStates();
            
            if (currentBarcode) {
                generateBarcode();
            }
        }
        
        function updateColorOptionStates() {
            // Actualizar opciones de color de barras
            document.querySelectorAll('.color-picker:first-child .color-option').forEach(option => {
                const swatch = option.querySelector('.color-swatch');
                const color = swatch.style.backgroundColor;
                const hexColor = rgbToHex(color) || '#000000';
                
                if (hexColor === currentBarColor) {
                    option.classList.add('active');
                } else {
                    option.classList.remove('active');
                }
            });
            
            // Actualizar opciones de color de fondo
            document.querySelectorAll('.color-picker:last-child .color-option').forEach(option => {
                const swatch = option.querySelector('.color-swatch');
                const color = swatch.style.backgroundColor;
                const hexColor = rgbToHex(color) || '#ffffff';
                
                if (hexColor === currentBgColor) {
                    option.classList.add('active');
                } else {
                    option.classList.remove('active');
                }
            });
        }
        
        function rgbToHex(rgb) {
            if (!rgb || rgb === '') return null;
            
            // Si ya es hexadecimal, devolverlo
            if (rgb.startsWith('#')) return rgb;
            
            // Convertir rgb(r, g, b) a hexadecimal
            const match = rgb.match(/^rgb\((\d+),\s*(\d+),\s*(\d+)\)$/);
            if (!match) return null;
            
            const r = parseInt(match[1]);
            const g = parseInt(match[2]);
            const b = parseInt(match[3]);
            
            return "#" + ((1 << 24) + (r << 16) + (g << 8) + b).toString(16).slice(1);
        }
        
        function updateBarColorCustom(color) {
            currentBarColor = color;
            
            // Actualizar estado de opciones
            updateColorOptionStates();
            
            if (currentBarcode) {
                generateBarcode();
            }
        }
        
        function updateBgColorCustom(color) {
            currentBgColor = color;
            
            // Actualizar estado de opciones
            updateColorOptionStates();
            
            if (currentBarcode) {
                generateBarcode();
            }
        }
        
        function resetColors() {
            currentBarColor = '#000000';
            currentBgColor = '#ffffff';
            document.getElementById('barColorPicker').value = '#000000';
            document.getElementById('bgColorPicker').value = '#ffffff';
            
            // Actualizar estado de opciones
            updateColorOptionStates();
            
            if (currentBarcode) {
                generateBarcode();
            }
            
            showAlert('‚úÖ Colores restablecidos a valores por defecto', 'success');
        }
        
        function resetRotation() {
            currentRotation = 0;
            document.getElementById('rotationInput').value = '0';
            
            // Actualizar botones activos
            document.querySelectorAll('.rotation-btn').forEach(btn => {
                btn.classList.remove('active');
                if (parseInt(btn.getAttribute('data-rotation')) === 0) {
                    btn.classList.add('active');
                }
            });
            
            // Quitar rotaci√≥n del SVG
            const barcodeSVG = document.getElementById('barcode');
            if (barcodeSVG) {
                barcodeSVG.style.transform = 'rotate(0deg)';
            }
            
            showAlert('‚úÖ Rotaci√≥n restablecida a 0¬∞', 'success');
        }
        
        function showAlert(message, type = 'error') {
            const alertBox = document.getElementById('alertBox');
            if (!alertBox) return;
            
            alertBox.textContent = message;
            alertBox.className = `alert alert-${type}`;
            alertBox.style.display = 'block';
            
            if (type === 'success') {
                setTimeout(() => {
                    alertBox.style.display = 'none';
                }, 5000);
            }
        }
        
        function showLoading(message = 'Generando imagen...') {
            const overlay = document.getElementById('loadingOverlay');
            const text = document.getElementById('loadingText');
            text.textContent = message;
            overlay.style.display = 'flex';
        }
        
        function hideLoading() {
            const overlay = document.getElementById('loadingOverlay');
            overlay.style.display = 'none';
        }
        
        // ====================================================================
        // GENERACI√ìN DE C√ìDIGO DE BARRAS - CON ROTACI√ìN CORREGIDA
        // ====================================================================
        
        function generateBarcode() {
            const config = formatConfig[currentFormat];
            let data = document.getElementById('dataInput').value.trim();
            
            // Validar datos seg√∫n formato
            let validation = config.validation(data);
            
            if (!validation.valid && validation.needsCheckDigit) {
                showAlert(`‚ö†Ô∏è ${validation.message}. Se generar√° con d√≠gito correcto.`, 'warning');
            } else if (!validation.valid) {
                showAlert(`‚ùå ${validation.message}`, 'error');
                document.getElementById('complianceInfo').style.display = 'none';
                document.getElementById('nonComplianceInfo').style.display = 'flex';
                document.getElementById('nonComplianceText').textContent = validation.message;
                return;
            }
            
            // Usar datos validados
            let barcodeData = validation.dataFull;
            
            // Configurar dimensiones seg√∫n escala y formato
            let height = config.defaultHeight * currentScale;
            let width = config.defaultWidth * currentScale;
            
            // Configurar opciones para JsBarcode
            const options = {
                format: currentFormat === 'UPC' ? 'UPC' : currentFormat,
                width: currentFormat === 'ITF14' ? 2 : 1,
                height: height * 0.0393701 * 96, // Convertir mm a p√≠xeles (96 DPI)
                displayValue: true,
                textMargin: 10,
                fontSize: 16,
                background: currentBgColor,
                lineColor: currentBarColor,
                margin: currentFormat === 'ITF14' ? 15 : 10,
                marginTop: 20,
                marginBottom: 20,
                marginLeft: 20,
                marginRight: 20,
                flat: currentFormat === 'ITF14' // Solo para ITF-14
            };
            
            try {
                // Limpiar SVG existente
                const barcodeSVG = document.getElementById('barcode');
                barcodeSVG.innerHTML = '';
                
                // Generar c√≥digo de barras
                JsBarcode("#barcode", barcodeData, options);
                
                // Aplicar rotaci√≥n si es necesario
                if (currentRotation !== 0) {
                    barcodeSVG.style.transform = `rotate(${currentRotation}deg)`;
                    barcodeSVG.style.transformOrigin = 'center center';
                } else {
                    barcodeSVG.style.transform = 'rotate(0deg)';
                }
                
                currentBarcode = { 
                    data: barcodeData,
                    dataBase: validation.dataBase,
                    checkDigit: validation.calculatedCheckDigit,
                    format: currentFormat,
                    formatName: config.name,
                    options: options,
                    height: height,
                    width: width,
                    barColor: currentBarColor,
                    bgColor: currentBgColor,
                    rotation: currentRotation
                };
                
                // Mostrar √©xito
                document.getElementById('noBarcode').style.display = 'none';
                document.getElementById('complianceInfo').style.display = 'flex';
                document.getElementById('complianceText').textContent = 
                    `${config.name} v√°lido seg√∫n est√°ndares internacionales`;
                document.getElementById('nonComplianceInfo').style.display = 'none';
                document.getElementById('codeDisplay').style.display = 'block';
                document.getElementById('codeDisplay').textContent = barcodeData;
                
                // Actualizar informaci√≥n en el panel
                const codeInfoElement = document.getElementById('codeInfo');
                if (codeInfoElement) {
                    let checkDigitInfo = "";
                    if (validation.needsCheckDigit && validation.calculatedCheckDigit !== null) {
                        checkDigitInfo = `<br><span style="color: var(--success); font-weight: bold;">‚úì D√≠gito validador calculado: ${validation.calculatedCheckDigit}</span>`;
                    }
                    
                    codeInfoElement.innerHTML = `
                        <strong>${config.name}</strong><br>
                        <span style="font-size: 12px;">C√≥digo completo: ${barcodeData}</span>
                        ${checkDigitInfo}<br>
                        <span style="font-size: 11px; color: #666;">Datos base: ${validation.dataBase}</span><br>
                        <span style="font-size: 11px; color: #666;">Altura: ${height.toFixed(1)}mm ‚Ä¢ Escala: ${currentScale * 100}% ‚Ä¢ DPI: ${currentDPI}</span><br>
                        <span style="font-size: 11px; color: #666;">Rotaci√≥n: ${currentRotation}¬∞ ‚Ä¢ Colores: Personalizados</span>
                    `;
                }
                
                // Actualizar dimensiones
                document.getElementById('currentHeight').textContent = `${height.toFixed(1)} mm`;
                document.getElementById('currentWidth').textContent = `${width.toFixed(1)} mm`;
                
                if (validation.valid && !validation.needsCheckDigit) {
                    showAlert(`‚úÖ ${config.name} generado correctamente.`, 'success');
                } else if (validation.needsCheckDigit && validation.calculatedCheckDigit !== null) {
                    showAlert(`‚úÖ ${config.name} generado con d√≠gito validador: ${validation.calculatedCheckDigit}`, 'success');
                } else {
                    showAlert(`‚úÖ ${config.name} generado correctamente.`, 'success');
                }
                
            } catch (error) {
                console.error('Error al generar c√≥digo:', error);
                showAlert(`‚ùå Error al generar c√≥digo: ${error.message}`, 'error');
                document.getElementById('nonComplianceInfo').style.display = 'flex';
                document.getElementById('nonComplianceText').textContent = error.message;
                document.getElementById('complianceInfo').style.display = 'none';
            }
        }
        
        // ====================================================================
        // FUNCIONES DE DESCARGA - CON ROTACI√ìN CORREGIDA
        // ====================================================================
        
        function downloadPNG() {
            if (!currentBarcode) {
                showAlert('‚ùå Genere un c√≥digo de barras primero', 'error');
                return;
            }
            
            const svg = document.getElementById('barcode');
            
            if (!svg || svg.innerHTML === '') {
                showAlert('‚ùå No hay c√≥digo de barras para descargar', 'error');
                return;
            }
            
            showLoading(`Generando PNG (${currentDPI} DPI)...`);
            
            setTimeout(() => {
                try {
                    // Clonar el SVG para no modificar el original
                    const svgClone = svg.cloneNode(true);
                    
                    // Guardar la rotaci√≥n original
                    const originalTransform = svg.style.transform;
                    
                    // Aplicar rotaci√≥n al clon
                    if (currentRotation !== 0) {
                        svgClone.style.transform = `rotate(${currentRotation}deg)`;
                        svgClone.style.transformOrigin = 'center center';
                    }
                    
                    const xml = new XMLSerializer().serializeToString(svgClone);
                    const img = new Image();
                    const scale = currentDPI / 96;
                    
                    img.onload = () => {
                        const canvas = document.createElement('canvas');
                        
                        // Calcular dimensiones del canvas considerando la rotaci√≥n
                        let canvasWidth, canvasHeight;
                        if (currentRotation === 90 || currentRotation === 270) {
                            canvasWidth = img.height * scale;
                            canvasHeight = img.width * scale;
                        } else {
                            canvasWidth = img.width * scale;
                            canvasHeight = img.height * scale;
                        }
                        
                        canvas.width = Math.round(canvasWidth);
                        canvas.height = Math.round(canvasHeight);
                        const ctx = canvas.getContext('2d');
                        
                        // Fondo con color personalizado
                        ctx.fillStyle = currentBgColor;
                        ctx.fillRect(0, 0, canvas.width, canvas.height);
                        
                        // Configurar calidad seg√∫n DPI
                        ctx.imageSmoothingEnabled = true;
                        ctx.imageSmoothingQuality = currentDPI >= 300 ? 'high' : 'medium';
                        
                        // Aplicar rotaci√≥n
                        ctx.save();
                        if (currentRotation !== 0) {
                            ctx.translate(canvas.width / 2, canvas.height / 2);
                            ctx.rotate(currentRotation * Math.PI / 180);
                            ctx.translate(-canvas.width / 2, -canvas.height / 2);
                        }
                        
                        // Dibujar imagen escalada
                        ctx.drawImage(img, 0, 0, img.width, img.height, 0, 0, canvas.width, canvas.height);
                        ctx.restore();
                        
                        // Convertir a Blob y descargar
                        canvas.toBlob((blob) => {
                            const a = document.createElement('a');
                            const fileName = `${currentBarcode.formatName}_${currentBarcode.data}_${currentScale * 100}porc_${currentDPI}dpi.png`;
                            a.download = fileName;
                            a.href = URL.createObjectURL(blob);
                            a.click();
                            
                            // Liberar memoria
                            setTimeout(() => {
                                URL.revokeObjectURL(a.href);
                                canvas.width = 0;
                                canvas.height = 0;
                            }, 100);
                            
                            hideLoading();
                            showAlert(`‚úÖ PNG (${currentDPI} DPI) descargado como "${fileName}"`, 'success');
                        }, 'image/png', 1.0);
                    };
                    
                    img.onerror = () => {
                        hideLoading();
                        showAlert('‚ùå Error al generar imagen PNG', 'error');
                    };
                    
                    img.src = 'data:image/svg+xml;base64,' + btoa(xml);
                    
                } catch (error) {
                    hideLoading();
                    console.error('Error en downloadPNG:', error);
                    showAlert('‚ùå Error al procesar la imagen: ' + error.message, 'error');
                }
            }, 100);
        }
        
        function downloadSVG() {
            const svg = document.getElementById('barcode');
            
            if (!svg || !currentBarcode || svg.innerHTML === '') {
                showAlert('‚ùå Genere un c√≥digo de barras primero', 'error');
                return;
            }
            
            showLoading('Preparando SVG vectorial...');
            
            setTimeout(() => {
                try {
                    const svgClone = svg.cloneNode(true);
                    
                    // Aplicar transformaci√≥n de rotaci√≥n si es necesario
                    if (currentRotation !== 0) {
                        const bbox = svgClone.getBBox();
                        const centerX = bbox.x + bbox.width / 2;
                        const centerY = bbox.y + bbox.height / 2;
                        
                        const transform = `rotate(${currentRotation} ${centerX} ${centerY})`;
                        const gElement = svgClone.querySelector('g');
                        if (gElement) {
                            if (gElement.getAttribute('transform')) {
                                gElement.setAttribute('transform', `${gElement.getAttribute('transform')} ${transform}`);
                            } else {
                                gElement.setAttribute('transform', transform);
                            }
                        }
                    }
                    
                    // A√±adir atributos de calidad y metadatos
                    svgClone.setAttribute('version', '1.1');
                    svgClone.setAttribute('xmlns', 'http://www.w3.org/2000/svg');
                    svgClone.setAttribute('xmlns:xlink', 'http://www.w3.org/1999/xlink');
                    
                    // Crear encabezado SVG con metadatos y copyright
                    const currentYear = new Date().getFullYear();
                    const svgData = `<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!-- 
  Generado con Generador de C√≥digos de Barras Professional ¬© ${currentYear}
  Todos los derechos reservados
-->
<!-- 
  Format: ${currentBarcode.formatName}
  Data: ${currentBarcode.data}
  ${currentBarcode.checkDigit ? `Check Digit: ${currentBarcode.checkDigit}` : ''}
  Scale: ${currentScale * 100}%
  Rotation: ${currentRotation}¬∞
  Bar Color: ${currentBarColor}
  Background Color: ${currentBgColor}
  Generation Date: ${new Date().toISOString()}
-->
${new XMLSerializer().serializeToString(svgClone)}`;
                    
                    const blob = new Blob([svgData], { type: 'image/svg+xml;charset=utf-8' });
                    
                    const a = document.createElement('a');
                    const fileName = `${currentBarcode.formatName}_${currentBarcode.data}_vectorial.svg`;
                    a.href = URL.createObjectURL(blob);
                    a.download = fileName;
                    a.click();
                    
                    // Limpiar URL
                    setTimeout(() => URL.revokeObjectURL(a.href), 100);
                    
                    hideLoading();
                    
                    showAlert(`‚úÖ SVG vectorial descargado como "${fileName}"`, 'success');
                    
                } catch (error) {
                    hideLoading();
                    showAlert('‚ùå Error al generar SVG: ' + error.message, 'error');
                }
            }, 300);
        }
        
        function downloadJPG() {
            if (!currentBarcode) {
                showAlert('‚ùå Genere un c√≥digo de barras primero', 'error');
                return;
            }
            
            const svg = document.getElementById('barcode');
            
            if (!svg || svg.innerHTML === '') {
                showAlert('‚ùå No hay c√≥digo de barras para descargar', 'error');
                return;
            }
            
            showLoading(`Generando JPG (${currentDPI} DPI)...`);
            
            setTimeout(() => {
                try {
                    // Clonar el SVG para no modificar el original
                    const svgClone = svg.cloneNode(true);
                    
                    // Aplicar rotaci√≥n al clon
                    if (currentRotation !== 0) {
                        svgClone.style.transform = `rotate(${currentRotation}deg)`;
                        svgClone.style.transformOrigin = 'center center';
                    }
                    
                    const xml = new XMLSerializer().serializeToString(svgClone);
                    const img = new Image();
                    const scale = currentDPI / 96;
                    
                    img.onload = () => {
                        const canvas = document.createElement('canvas');
                        
                        // Calcular dimensiones del canvas considerando la rotaci√≥n
                        let canvasWidth, canvasHeight;
                        if (currentRotation === 90 || currentRotation === 270) {
                            canvasWidth = img.height * scale;
                            canvasHeight = img.width * scale;
                        } else {
                            canvasWidth = img.width * scale;
                            canvasHeight = img.height * scale;
                        }
                        
                        // Limitar tama√±o m√°ximo para JPG
                        const maxDimension = 4000;
                        if (canvasWidth > maxDimension || canvasHeight > maxDimension) {
                            const scaleRatio = Math.min(maxDimension / canvasWidth, maxDimension / canvasHeight);
                            canvasWidth = canvasWidth * scaleRatio;
                            canvasHeight = canvasHeight * scaleRatio;
                        }
                        
                        canvas.width = Math.round(canvasWidth);
                        canvas.height = Math.round(canvasHeight);
                        const ctx = canvas.getContext('2d');
                        
                        // Fondo con color personalizado (importante para JPG)
                        ctx.fillStyle = currentBgColor;
                        ctx.fillRect(0, 0, canvas.width, canvas.height);
                        
                        // Configurar calidad
                        ctx.imageSmoothingEnabled = true;
                        ctx.imageSmoothingQuality = 'medium';
                        
                        // Aplicar rotaci√≥n
                        ctx.save();
                        if (currentRotation !== 0) {
                            ctx.translate(canvas.width / 2, canvas.height / 2);
                            ctx.rotate(currentRotation * Math.PI / 180);
                            ctx.translate(-canvas.width / 2, -canvas.height / 2);
                        }
                        
                        // Dibujar imagen
                        ctx.drawImage(img, 0, 0, img.width, img.height, 0, 0, canvas.width, canvas.height);
                        ctx.restore();
                        
                        // Convertir a Blob para JPG
                        canvas.toBlob((blob) => {
                            const a = document.createElement('a');
                            const fileName = `${currentBarcode.formatName}_${currentBarcode.data}_${currentScale * 100}porc_${currentDPI}dpi.jpg`;
                            a.download = fileName;
                            a.href = URL.createObjectURL(blob);
                            a.click();
                            
                            // Liberar memoria
                            setTimeout(() => {
                                URL.revokeObjectURL(a.href);
                                canvas.width = 0;
                                canvas.height = 0;
                            }, 100);
                            
                            hideLoading();
                            showAlert(`‚úÖ JPG (${currentDPI} DPI) descargado como "${fileName}"`, 'success');
                        }, 'image/jpeg', 0.92); // Calidad 0.92 para buen balance tama√±o/calidad
                    };
                    
                    img.onerror = () => {
                        hideLoading();
                        showAlert('‚ùå Error al generar imagen JPG', 'error');
                    };
                    
                    img.src = 'data:image/svg+xml;base64,' + btoa(xml);
                    
                } catch (error) {
                    hideLoading();
                    console.error('Error en downloadJPG:', error);
                    showAlert('‚ùå Error al procesar la imagen JPG: ' + error.message, 'error');
                }
            }, 100);
        }
        
        // ====================================================================
        // FUNCI√ìN DE IMPRESI√ìN
        // ====================================================================
        
        function printBarcode() {
            if (!currentBarcode) {
                showAlert('‚ùå Genere un c√≥digo de barras primero', 'error');
                return;
            }
            
            const printWindow = window.open('', '_blank');
            printWindow.document.write(`
                <html>
                <head>
                    <title>Imprimir C√≥digo ${currentBarcode.formatName}</title>
                    <style>
                        @media print {
                            @page {
                                size: auto;
                                margin: 15mm;
                            }
                            body {
                                margin: 0;
                                padding: 0;
                            }
                        }
                        body { 
                            font-family: Arial, sans-serif; 
                            text-align: center; 
                            padding: 30px; 
                            margin: 0;
                        }
                        h1 { 
                            color: #253e86; 
                            margin-bottom: 15px;
                            font-size: 20px;
                        }
                        .barcode-info {
                            background: #f8f9fa;
                            padding: 15px;
                            border-radius: 6px;
                            margin-bottom: 15px;
                            text-align: left;
                            display: inline-block;
                            font-size: 13px;
                            max-width: 600px;
                        }
                        svg { 
                            max-width: 100%; 
                            height: auto; 
                            margin: 15px 0; 
                            transform: rotate(${currentRotation}deg);
                            transform-origin: center center;
                        }
                        .print-controls {
                            margin-top: 20px;
                            padding: 15px;
                            background: #f0f0f0;
                            border-radius: 5px;
                        }
                        .print-btn {
                            background: #253e86;
                            color: white;
                            border: none;
                            padding: 10px 20px;
                            border-radius: 4px;
                            cursor: pointer;
                            margin: 0 5px;
                            font-size: 14px;
                        }
                        .copyright {
                            font-size: 10px;
                            color: #999;
                            margin-top: 20px;
                            text-align: center;
                        }
                        @media print {
                            .print-controls {
                                display: none;
                            }
                        }
                    </style>
                </head>
                <body>
                    <h1>C√≥digo de Barras ${currentBarcode.formatName}</h1>
                    <div class="barcode-info">
                        <p><strong>Formato:</strong> ${currentBarcode.formatName}</p>
                        <p><strong>C√≥digo completo:</strong> ${currentBarcode.data}</p>
                        ${currentBarcode.checkDigit ? `<p><strong>D√≠gito validador:</strong> ${currentBarcode.checkDigit}</p>` : ''}
                        <p><strong>Escala:</strong> ${currentScale * 100}%</p>
                        <p><strong>Rotaci√≥n:</strong> ${currentRotation}¬∞</p>
                        <p><strong>Color barras:</strong> ${currentBarColor}</p>
                        <p><strong>Color fondo:</strong> ${currentBgColor}</p>
                        <p><strong>Altura:</strong> ${currentBarcode.height.toFixed(1)} mm</p>
                        <p><strong>DPI recomendado:</strong> 300+ para impresi√≥n profesional</p>
                    </div>
                    
                    ${document.getElementById('barcode').outerHTML}
                    
                    <div class="print-controls">
                        <p><strong>Configuraci√≥n de impresi√≥n:</strong></p>
                        <button class="print-btn" onclick="window.print()">üñ®Ô∏è Imprimir</button>
                        <button class="print-btn" onclick="window.close()">‚ùå Cerrar</button>
                        <p style="margin-top: 10px; font-size: 12px;">Aseg√∫rese de que la impresi√≥n est√© configurada al 100%</p>
                    </div>
                    
                    <div class="copyright">
                        ¬© 2025 Generador de C√≥digos de Barras Professional - Todos los derechos reservados
                    </div>
                    
                    <script>
                        window.onload = function() {
                            setTimeout(function() {
                                window.print();
                            }, 500);
                        };
                    <\/script>
                </body>
                </html>
            `);
            printWindow.document.close();
        }
        
        // Inicializar con DPI 300 (recomendado para impresi√≥n)
        selectDPI(300);
    </script>
</body>
</html>
